---
import { SITE_TITLE, SITE_EMAIL } from "../consts";
const { theme } = Astro.props;
import { SITE_NAME } from "../consts";
const date = new Date();
const year = date.getFullYear();
---

<div class:list={["footer-main", { "footer-dark": theme === "dark" }]}>
  <div class="content-body footer-wraper">
    <div class="footer-box">
      <div class="foot-nav">
        <div class="foot-nav-items">
          <div class="item">
            <div class="logo">{SITE_TITLE}</div>
            <div class="email">Email: {SITE_EMAIL}</div>
          </div>

          <div class="item products">
            <div class="item-title">作品</div>
            <a href="/" target="_blank">本站</a>
            <a href="https://blog.csdn.net/uncle_ll" target="_blank">CSDN</a>
            <a href="https://github.com/UncleLLD" target="_blank">Github</a>
            <a href="https://mp.weixin.qq.com/s/5t_GyHEV3j_K0dqJ_x2YtQ" target="_blank">微信公众号</a>
          </div>

          <div class="item community">
            <div class="item-title">社媒</div>
            <a href="https://blog.csdn.net/uncle_ll" target="_blank">CSDN</a>
            <a href="https://github.com/UncleLLD" target="_blank">Github</a>
            <a href="https://www.zhihu.com/people/ll-uncle" target="_blank"> 知乎</a>
            <a href="https://juejin.cn/user/1007624544587789" target="_blank"> 掘金</a>
            <a href="https://mp.weixin.qq.com/s/5t_GyHEV3j_K0dqJ_x2YtQ" target="_blank">微信公众号</a>
          </div>

          <div class="item resources">
            <div class="item-title">友链</div>
            <a href="https://mp.weixin.qq.com/s/5t_GyHEV3j_K0dqJ_x2YtQ">AI科技时讯</a>
          </div>
        </div>
      </div>
      <div class="bottom">
        <div class="copyright">
          &copy; {`2018-${year}  ${SITE_NAME}`} 
          <a href="//github.com/austin2035/astro-air-blog">astro-air-blog</a>
        </div>
      </div>
    </div>
  </div>
</div>
